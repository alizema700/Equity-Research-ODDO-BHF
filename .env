# =============================================================================
# Sales Intelligence Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# Database type: "sqlite" (development) or "postgres" (production/Supabase)
DB_TYPE=sqlite

# SQLite path (used when DB_TYPE=sqlite)
SQLITE_PATH=./data.db

# PostgreSQL connection URL (used when DB_TYPE=postgres)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# Supabase-specific (for direct API access)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# -----------------------------------------------------------------------------
# AI Configuration
# -----------------------------------------------------------------------------

# OpenAI (current - will be replaced by Mistral)
OPENAI_API_KEY=sk-projXXX
# Mistral AI (future - EU-compliant)
MISTRAL_API_KEY=your-mistral-api-key
MISTRAL_MODEL_FAST=mistral-small-latest
MISTRAL_MODEL_DETAILED=mistral-large-latest

# AI Model Selection
# FAST: For summaries, shortlists (lower cost, faster)
# DETAILED: For complex stories, call prep (higher quality)
AI_DEFAULT_TIER=FAST

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Server configuration
HOST=0.0.0.0
PORT=8000

# Security
APP_API_KEY=optional-api-key-for-frontend

# Logging
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable semantic search (requires pgvector extension)
ENABLE_SEMANTIC_SEARCH=false

# Enable call pre-summarization before story generation
ENABLE_CALL_SUMMARIZATION=true

# Enable objection detection in story prompts
ENABLE_OBJECTION_HANDLER=true
